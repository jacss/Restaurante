<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff6600"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="361dp"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/consumo_total" />

        <EditText
            android:id="@+id/editConsumo_Id"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName|number"
            android:numeric="decimal"
            android:paddingLeft="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="361dp"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/couvert_artitico" />

        <EditText
            android:id="@+id/editCouvert_Id"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName|number"
            android:numeric="decimal"
            android:paddingLeft="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="361dp"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/dividido_por" />

        <EditText
            android:id="@+id/editDividirPorP_Id"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName|number"
            android:numeric="integer|decimal"
            android:paddingLeft="20dp" />
    </TableRow>

    <Button
        android:id="@+id/calcularContaF_Id"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:background="#f88f44"
        android:text="Calcular conta final" />

    <TableRow
        android:layout_width="361dp"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/taxa_servico" />

        <EditText
            android:id="@+id/editTaxa_Id"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:editable="true"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:numeric="decimal" />
    </TableRow>

    <TableRow
        android:layout_width="361dp"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/conta_total" />

        <EditText
            android:id="@+id/editContaTotal_Id"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:editable="true"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:numeric="decimal" />
    </TableRow>
    <TableRow
        android:layout_width="361dp"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/valor_por_pessoa" />

        <EditText
            android:id="@+id/editPorPessoa_Id"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:editable="true"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:numeric="decimal" />
    </TableRow>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/balaio_de_lenha" />

</LinearLayout>